<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="WindowStyle">
        <Setter Property="Window.FontFamily" Value="Times New Roman"/>
    </Style>

    <Style x:Key="TextStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBox.Margin" Value="3"/>
        <Setter Property="TextBox.Foreground" Value="Black"/>
        <!--<Setter Property="TextBox.FontFamily" Value="Times New Roman"/>-->
    </Style>

    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Control.Foreground" Value="Black"/>
        <Setter Property="Control.BorderBrush" Value="#FF6C6A6A"/>
        <Setter Property="Control.Margin" Value="5"/>
        <Setter Property="Control.Padding" Value="1"/>
        <!--<Setter Property="Control.FontFamily" Value="Times New Roman"/>-->
    </Style>

    <Style x:Key="LableStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Label.HorizontalAlignment" Value="Right"/>
        <Setter Property="Label.Foreground" Value="Black"/>
        <!--<Setter Property="Label.FontFamily" Value="Times New Roman"/>-->
    </Style>
</ResourceDictionary>